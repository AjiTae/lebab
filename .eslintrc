{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-bitwise": 2,
    "camelcase": 2,
    "curly": 2,
    "eqeqeq": 2,
    "wrap-iife": 2,
    "indent": [2, 2],
    "new-cap": 2,
    "no-caller": 2,
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unused-vars": 2,
  }
}
